[Unit]
Description=harmony bootnode service
After=network.target

[Service]
Type=simple
Restart=on-failure
RestartSec=1
WorkingDirectory=/home/ec2-user
ExecStart=/usr/sbin/bootnode -port {{ port }} -key {{ key }} -ip 0.0.0.0
StandardError=syslog
SyslogIdentifier=harmony
StartLimitInterval=0
LimitNOFILE=65536
LimitNPROC=65536

[Install]
WantedBy=multi-user.target
